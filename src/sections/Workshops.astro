---
// Workshops Section - zeigt nur aktive Workshops an
---

<section class="workshops animate-on-scroll">
  <div class="container">
    <h2 class="workshops__title">Workshops</h2>
    <div id="workshops-container" class="workshops__grid">
      <div class="workshops__loading">Lade Workshops...</div>
    </div>
    <div id="no-workshops" class="workshops__empty hidden">
      Aktuell sind keine Workshops verf√ºgbar.
    </div>
  </div>
</section>

<script>
  async function loadWorkshops() {
    const container = document.getElementById('workshops-container');
    const noWorkshops = document.getElementById('no-workshops');
    
    if (!container || !noWorkshops) return;

    try {
      const response = await fetch('/api/workshops');
      if (!response.ok) throw new Error('Failed to load workshops');
      
      const workshops = await response.json();
      
      // Loading entfernen
      container.innerHTML = '';
      
      if (workshops.length === 0) {
        container.classList.add('hidden');
        noWorkshops.classList.remove('hidden');
        return;
      }

      noWorkshops.classList.add('hidden');
      container.classList.remove('hidden');

      workshops.forEach((workshop: any) => {
        const card = document.createElement('div');
        card.className = 'workshop-card';
        
        const formattedDate = new Date(workshop.date + 'T00:00:00').toLocaleDateString('de-DE', {
          weekday: 'long',
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        card.innerHTML = `
          <div class="workshop-card__header">
            <h3 class="workshop-card__title">${escapeHtml(workshop.title)}</h3>
            <span class="workshop-card__price">${escapeHtml(workshop.price)}</span>
          </div>
          <p class="workshop-card__description">${escapeHtml(workshop.description)}</p>
          <div class="workshop-card__details">
            <div class="workshop-card__detail">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <span>${formattedDate}</span>
            </div>
            <div class="workshop-card__detail">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              <span>${workshop.time} Uhr</span>
            </div>
            <div class="workshop-card__detail">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
              <span>Max. ${workshop.maxParticipants} Teilnehmer</span>
            </div>
          </div>
          <a href="#calendar-section" class="workshop-card__button">Jetzt buchen</a>
        `;
        
        container.appendChild(card);
      });
    } catch (error) {
      console.error('Error loading workshops:', error);
      container.innerHTML = '<p class="workshops__error">Fehler beim Laden der Workshops.</p>';
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Workshops beim Laden der Seite abrufen
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadWorkshops);
  } else {
    loadWorkshops();
  }
</script>

<style>
  .workshops {
    padding: var(--space-12) var(--gutter);
    background-color: var(--color-background);
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .workshops__title {
    font-family: var(--font-serif);
    color: var(--color-clay-brown);
    text-align: center;
    margin-bottom: var(--space-8);
    font-size: 2.5rem;
  }

  .workshops__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .workshops__loading,
  .workshops__error {
    text-align: center;
    color: var(--color-text-secondary);
    padding: var(--space-8);
    grid-column: 1 / -1;
  }

  .workshops__empty {
    text-align: center;
    color: var(--color-text-secondary);
    padding: var(--space-8);
  }

  .hidden {
    display: none !important;
  }

  .workshop-card {
    background: white;
    border-radius: 12px;
    padding: var(--space-6);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
  }

  .workshop-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .workshop-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .workshop-card__title {
    font-family: var(--font-serif);
    color: var(--color-clay-brown);
    font-size: 1.5rem;
    margin: 0;
    flex: 1;
  }

  .workshop-card__price {
    font-weight: 600;
    color: var(--color-terracotta);
    font-size: 1.125rem;
    white-space: nowrap;
  }

  .workshop-card__description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    flex: 1;
  }

  .workshop-card__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .workshop-card__detail {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .workshop-card__detail svg {
    color: var(--color-clay-brown);
    flex-shrink: 0;
  }

  .workshop-card__button {
    display: inline-block;
    background: var(--color-terracotta);
    color: white;
    padding: var(--space-3) var(--space-6);
    border-radius: 8px;
    text-decoration: none;
    text-align: center;
    font-weight: 600;
    transition: background 0.2s, transform 0.2s;
  }

  .workshop-card__button:hover {
    background: var(--color-clay-brown);
    transform: translateY(-2px);
  }

  /* Mobile Optimierungen */
  @media (max-width: 639px) {
    .workshops {
      padding: var(--space-8) var(--gutter);
    }

    .workshops__title {
      font-size: 1.875rem;
      margin-bottom: var(--space-6);
    }

    .workshops__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .workshop-card__header {
      flex-direction: column;
      align-items: flex-start;
    }

    .workshop-card__title {
      font-size: 1.25rem;
    }
  }


