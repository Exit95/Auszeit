---
// Bewertungen-Section mit Formular und Anzeige
---

<section id="bewertungen" class="reviews">
  <div class="container">
    <!-- Header mit Statistik -->
    <div class="reviews__header">
      <div class="reviews__header-content">
        <h2 class="reviews__title">Was unsere Gäste sagen</h2>
        <p class="reviews__subtitle">Echte Erfahrungen aus unserem Atelier</p>
      </div>
      <div class="reviews__stats">
        <div class="reviews__rating-big">
          <span class="rating-number">5.0</span>
          <div class="rating-stars">★★★★★</div>
          <span class="rating-count" id="review-count">Bewertungen</span>
        </div>
      </div>
    </div>

    <!-- Bewertungen Slider/Grid -->
    <div class="reviews-wrapper">
      <div id="reviews-container" class="reviews-grid">
        <div class="loading-container">
          <div class="loading-spinner"></div>
          <p class="loading">Bewertungen werden geladen...</p>
        </div>
      </div>
    </div>

    <!-- Bewertungsformular -->
    <div class="review-form-container">
      <div class="form-header">
        <span class="form-icon">✍️</span>
        <h3>Ihre Meinung ist uns wichtig!</h3>
        <p>Teilen Sie Ihre Erfahrung mit uns</p>
      </div>
      
      <form id="review-form" class="review-form">
        <div class="form-group">
          <label for="review-name">Ihr Name *</label>
          <input type="text" id="review-name" name="name" required placeholder="Max Mustermann">
        </div>
        
        <div class="form-group">
          <label for="review-rating">Bewertung *</label>
          <div class="star-rating">
            <input type="radio" id="star5" name="rating" value="5" required>
            <label for="star5" title="5 Sterne">★</label>
            <input type="radio" id="star4" name="rating" value="4">
            <label for="star4" title="4 Sterne">★</label>
            <input type="radio" id="star3" name="rating" value="3">
            <label for="star3" title="3 Sterne">★</label>
            <input type="radio" id="star2" name="rating" value="2">
            <label for="star2" title="2 Sterne">★</label>
            <input type="radio" id="star1" name="rating" value="1">
            <label for="star1" title="1 Stern">★</label>
          </div>
        </div>
        
        <div class="form-group">
          <label for="review-comment">Ihre Bewertung *</label>
          <textarea id="review-comment" name="comment" required rows="4" placeholder="Teilen Sie Ihre Erfahrung..."></textarea>
        </div>

        <button type="submit" class="btn btn--primary btn--large">Bewertung absenden</button>
        <p class="form-note">Ihre Bewertung wird nach Prüfung veröffentlicht.</p>
      </form>
      
      <div id="review-success" class="success-message" style="display: none;">
        ✅ Vielen Dank für Ihre Bewertung! Sie wird nach Prüfung veröffentlicht.
      </div>
      <div id="review-error" class="error-message" style="display: none;"></div>
    </div>
  </div>
</section>

<style>
  .reviews {
    padding: 80px 24px;
    background: linear-gradient(180deg, #faf8f5 0%, #f5f0e8 100%);
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header mit Statistik */
  .reviews__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 60px;
    flex-wrap: wrap;
    gap: 32px;
  }

  .reviews__header-content {
    flex: 1;
    min-width: 280px;
  }

  .reviews__title {
    font-family: 'Playfair Display', Georgia, serif;
    color: #5d4e37;
    margin-bottom: 8px;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
  }

  .reviews__subtitle {
    color: #7a6f63;
    font-size: 1.125rem;
  }

  .reviews__stats {
    text-align: center;
  }

  .reviews__rating-big {
    background: #ffffff;
    padding: 24px 32px;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(93, 78, 55, 0.12);
    border: 2px solid #e8dfd3;
  }

  .rating-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: #5d4e37;
    line-height: 1;
  }

  .rating-stars {
    color: #f5a623;
    font-size: 1.5rem;
    letter-spacing: 2px;
    margin: 6px 0;
  }

  .rating-count {
    font-size: 0.875rem;
    color: #9a8d7f;
  }

  /* Reviews Grid */
  .reviews-wrapper {
    margin-bottom: 80px;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 28px;
  }

  /* Review Card - Premium Design */
  .review-card {
    background: #ffffff;
    padding: 28px;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(93, 78, 55, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(139, 111, 71, 0.08);
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .review-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #c4956a, #8b6f47);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .review-card::after {
    content: '"';
    position: absolute;
    top: 20px;
    right: 24px;
    font-size: 5rem;
    font-family: Georgia, serif;
    color: #f5f0e8;
    line-height: 1;
    pointer-events: none;
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(93, 78, 55, 0.18);
  }

  .review-card:hover::before {
    opacity: 1;
  }

  .review-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
    position: relative;
    z-index: 1;
  }

  .review-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #c4956a 0%, #8b6f47 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(139, 111, 71, 0.3);
    letter-spacing: 1px;
  }

  .review-meta {
    flex: 1;
  }

  .review-name {
    font-weight: 700;
    color: #5d4e37;
    font-size: 1.125rem;
    display: block;
    margin-bottom: 4px;
  }

  .review-date {
    color: #9a8d7f;
    font-size: 0.875rem;
  }

  .review-stars {
    color: #f5a623;
    font-size: 1.25rem;
    letter-spacing: 3px;
    margin-bottom: 16px;
    position: relative;
    z-index: 1;
  }

  .review-comment {
    color: #4a4a4a;
    line-height: 1.8;
    font-size: 1rem;
    flex: 1;
    position: relative;
    z-index: 1;
    font-style: italic;
  }

  /* Loading Animation */
  .loading-container {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px;
  }

  .loading-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid #e8dfd3;
    border-top-color: #c4956a;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20px;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .loading {
    text-align: center;
    color: #7a6f63;
    font-size: 1rem;
  }

  /* Form Container */
  .review-form-container {
    max-width: 600px;
    margin: 0 auto;
    background: #ffffff;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 12px 48px rgba(93, 78, 55, 0.12);
    border: 1px solid rgba(139, 111, 71, 0.08);
  }

  .form-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .form-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 16px;
  }

  .form-header h3 {
    font-family: 'Playfair Display', Georgia, serif;
    color: #5d4e37;
    margin-bottom: 8px;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .form-header p {
    color: #7a6f63;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #5d4e37;
  }

  .form-group input[type="text"],
  .form-group textarea {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e8dfd3;
    border-radius: 12px;
    font-size: 1rem;
    font-family: inherit;
    background: #faf8f5;
    transition: all 0.3s ease;
  }

  .form-group input[type="text"]:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #c4956a;
    background: #ffffff;
    box-shadow: 0 0 0 4px rgba(196, 149, 106, 0.1);
  }

  .star-rating {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
    gap: 4px;
  }

  .star-rating input {
    display: none;
  }

  .star-rating label {
    font-size: 2.25rem;
    color: #e8dfd3;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .star-rating input:checked ~ label,
  .star-rating label:hover,
  .star-rating label:hover ~ label {
    color: #f5a623;
    transform: scale(1.1);
  }

  .form-note {
    margin-top: 12px;
    font-size: 0.875rem;
    color: #9a8d7f;
    font-style: italic;
  }

  .success-message {
    background: #e8f5e9;
    color: #2e7d32;
    padding: 16px;
    border-radius: 12px;
    margin-top: 20px;
    text-align: center;
    border: 1px solid #a5d6a7;
  }

  .error-message {
    background: #ffebee;
    color: #c62828;
    padding: 16px;
    border-radius: 12px;
    margin-top: 20px;
    text-align: center;
    border: 1px solid #ef9a9a;
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-weight: 600;
    border-radius: 12px;
    border: none;
    transition: all 0.3s ease;
    text-decoration: none;
    white-space: nowrap;
    min-height: 52px;
    padding: 0 28px;
    cursor: pointer;
    font-family: inherit;
    font-size: 1rem;
  }

  .btn--large {
    font-size: 1.125rem;
    padding: 0 36px;
    min-height: 56px;
  }

  .btn--primary {
    background: linear-gradient(135deg, #c4956a 0%, #8b6f47 100%);
    color: #ffffff;
    box-shadow: 0 4px 16px rgba(139, 111, 71, 0.3);
  }

  .btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(139, 111, 71, 0.4);
  }

  .btn--primary:active {
    transform: translateY(0);
  }

  /* Tablet */
  @media (max-width: 900px) {
    .reviews__header {
      flex-direction: column;
      text-align: center;
    }

    .reviews__header-content {
      text-align: center;
    }

    .reviews-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }
  }

  /* Mobile Optimierungen */
  @media (max-width: 639px) {
    .reviews {
      padding: 60px 16px;
    }

    .reviews__header {
      margin-bottom: 40px;
    }

    .reviews__rating-big {
      padding: 20px 24px;
    }

    .rating-number {
      font-size: 2rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .review-card {
      padding: 24px;
    }

    .review-card::after {
      font-size: 4rem;
      top: 16px;
      right: 20px;
    }

    .review-avatar {
      width: 48px;
      height: 48px;
      font-size: 1.125rem;
    }

    .review-form-container {
      padding: 28px;
    }

    .form-header h3 {
      font-size: 1.25rem;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 374px) {
    .reviews {
      padding: 48px 12px;
    }

    .review-card {
      padding: 20px;
    }

    .review-form-container {
      padding: 24px;
    }
  }
</style>

<script>
  // Initialen aus Namen extrahieren
  function getInitials(name: string): string {
    const parts = name.trim().split(' ');
    if (parts.length >= 2) {
      return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
    }
    return name.substring(0, 2).toUpperCase();
  }

  // Datum formatieren
  function formatDate(dateString: string): string {
    const date = new Date(dateString);
    const options: Intl.DateTimeFormatOptions = {
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    };
    return date.toLocaleDateString('de-DE', options);
  }

  // Bewertungen laden und anzeigen
  async function loadReviews() {
    try {
      const response = await fetch('/api/reviews');
      const reviews = await response.json();

      const container = document.getElementById('reviews-container');
      const countEl = document.getElementById('review-count');
      if (!container) return;

      if (reviews.length === 0) {
        container.innerHTML = '<div class="loading-container"><p class="loading">Noch keine Bewertungen vorhanden. Seien Sie der Erste!</p></div>';
        return;
      }

      // Update review count
      if (countEl) {
        countEl.textContent = `${reviews.length} Bewertung${reviews.length !== 1 ? 'en' : ''}`;
      }

      // Sortiere nach Datum (neueste zuerst)
      reviews.sort((a: any, b: any) => new Date(b.date).getTime() - new Date(a.date).getTime());

      container.innerHTML = reviews.map((review: any) => `
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">${getInitials(review.name)}</div>
            <div class="review-meta">
              <span class="review-name">${escapeHtml(review.name)}</span>
              <span class="review-date">${formatDate(review.date)}</span>
            </div>
          </div>
          <div class="review-stars">${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}</div>
          <div class="review-comment">${escapeHtml(review.comment)}</div>
        </div>
      `).join('');
    } catch (error) {
      console.error('Fehler beim Laden der Bewertungen:', error);
      const container = document.getElementById('reviews-container');
      if (container) {
        container.innerHTML = '<div class="loading-container"><p class="loading">Fehler beim Laden der Bewertungen.</p></div>';
      }
    }
  }

  function escapeHtml(text: string) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // Formular absenden
  const form = document.getElementById('review-form') as HTMLFormElement;
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        rating: formData.get('rating'),
        comment: formData.get('comment')
      };
      
      try {
        const response = await fetch('/api/reviews', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          const successMsg = document.getElementById('review-success');
          const errorMsg = document.getElementById('review-error');
          if (successMsg) successMsg.style.display = 'block';
          if (errorMsg) errorMsg.style.display = 'none';
          form.reset();
          
          setTimeout(() => {
            if (successMsg) successMsg.style.display = 'none';
          }, 5000);
        } else {
          throw new Error('Fehler beim Absenden');
        }
      } catch (error) {
        const errorMsg = document.getElementById('review-error');
        if (errorMsg) {
          errorMsg.textContent = '❌ Fehler beim Absenden. Bitte versuchen Sie es später erneut.';
          errorMsg.style.display = 'block';
        }
      }
    });
  }
  
  // Bewertungen beim Laden der Seite anzeigen
  loadReviews();
</script>

