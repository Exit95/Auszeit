---
// Bewertungen-Section mit Formular und Anzeige
---

<section id="bewertungen" class="reviews">
  <div class="container">
    <!-- Header mit Statistik -->
    <div class="reviews__header">
      <div class="reviews__header-content">
        <h2 class="reviews__title">Was unsere Gäste sagen</h2>
        <p class="reviews__subtitle">Echte Erfahrungen aus unserem Atelier</p>
      </div>
      <div class="reviews__stats">
        <div class="reviews__rating-big">
          <span class="rating-number">5.0</span>
          <div class="rating-stars">★★★★★</div>
          <span class="rating-count" id="review-count">Bewertungen</span>
        </div>
      </div>
    </div>

    <!-- Bewertungen Slider/Grid -->
    <div class="reviews-wrapper">
      <div id="reviews-container" class="reviews-grid">
        <div class="loading-container">
          <div class="loading-spinner"></div>
          <p class="loading">Bewertungen werden geladen...</p>
        </div>
      </div>
    </div>

    <!-- Bewertungsformular -->
    <div class="review-form-container">
      <div class="form-header">
        <span class="form-icon">✍️</span>
        <h3>Ihre Meinung ist uns wichtig!</h3>
        <p>Teilen Sie Ihre Erfahrung mit uns</p>
      </div>
      
      <form id="review-form" class="review-form">
        <div class="form-group">
          <label for="review-name">Ihr Name *</label>
          <input type="text" id="review-name" name="name" required placeholder="Max Mustermann">
        </div>
        
        <div class="form-group">
          <label for="review-rating">Bewertung *</label>
          <div class="star-rating">
            <input type="radio" id="star5" name="rating" value="5" required>
            <label for="star5" title="5 Sterne">★</label>
            <input type="radio" id="star4" name="rating" value="4">
            <label for="star4" title="4 Sterne">★</label>
            <input type="radio" id="star3" name="rating" value="3">
            <label for="star3" title="3 Sterne">★</label>
            <input type="radio" id="star2" name="rating" value="2">
            <label for="star2" title="2 Sterne">★</label>
            <input type="radio" id="star1" name="rating" value="1">
            <label for="star1" title="1 Stern">★</label>
          </div>
        </div>
        
        <div class="form-group">
          <label for="review-comment">Ihre Bewertung *</label>
          <textarea id="review-comment" name="comment" required rows="4" placeholder="Teilen Sie Ihre Erfahrung..."></textarea>
        </div>

        <button type="submit" class="btn btn--primary btn--large">Bewertung absenden</button>
        <p class="form-note">Ihre Bewertung wird nach Prüfung veröffentlicht.</p>
      </form>
      
      <div id="review-success" class="success-message" style="display: none;">
        ✅ Vielen Dank für Ihre Bewertung! Sie wird nach Prüfung veröffentlicht.
      </div>
      <div id="review-error" class="error-message" style="display: none;"></div>
    </div>
  </div>
</section>

<style>
  .reviews {
    padding: var(--space-12) var(--gutter);
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-soft-cream) 100%);
    position: relative;
    overflow: hidden;
  }

  .reviews::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-warm-beige), transparent);
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  /* Header mit Statistik */
  .reviews__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-10);
    flex-wrap: wrap;
    gap: var(--space-6);
  }

  .reviews__header-content {
    flex: 1;
    min-width: 280px;
  }

  .reviews__title {
    font-family: var(--font-serif);
    color: var(--color-clay-brown);
    margin-bottom: var(--space-2);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
  }

  .reviews__subtitle {
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
  }

  .reviews__stats {
    text-align: center;
  }

  .reviews__rating-big {
    background: white;
    padding: var(--space-5) var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--color-warm-beige);
  }

  .rating-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-clay-brown);
    line-height: 1;
  }

  .rating-stars {
    color: #f5a623;
    font-size: 1.5rem;
    letter-spacing: 2px;
    margin: var(--space-1) 0;
  }

  .rating-count {
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
  }

  /* Reviews Grid */
  .reviews-wrapper {
    margin-bottom: var(--space-12);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  /* Review Card - Neu gestaltet */
  .review-card {
    background: white;
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    border: 1px solid rgba(139, 111, 71, 0.1);
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .review-card::before {
    content: '"';
    position: absolute;
    top: var(--space-4);
    right: var(--space-5);
    font-size: 4rem;
    font-family: Georgia, serif;
    color: var(--color-warm-beige);
    opacity: 0.5;
    line-height: 1;
  }

  .review-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(139, 111, 71, 0.15);
    border-color: var(--color-terracotta);
  }

  .review-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .review-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-terracotta), var(--color-clay-brown));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 1.125rem;
    flex-shrink: 0;
  }

  .review-meta {
    flex: 1;
  }

  .review-name {
    font-weight: 600;
    color: var(--color-clay-brown);
    font-size: 1.125rem;
    display: block;
    margin-bottom: 2px;
  }

  .review-date {
    color: var(--color-text-tertiary);
    font-size: var(--font-size-sm);
  }

  .review-stars {
    color: #f5a623;
    font-size: 1.125rem;
    letter-spacing: 1px;
    margin-bottom: var(--space-3);
  }

  .review-comment {
    color: var(--color-text-primary);
    line-height: 1.7;
    font-size: 0.9375rem;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  /* Loading Animation */
  .loading-container {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-10);
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid var(--color-warm-beige);
    border-top-color: var(--color-terracotta);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: var(--space-4);
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .loading {
    text-align: center;
    color: var(--color-text-secondary);
  }

  /* Form Container - Neu gestaltet */
  .review-form-container {
    max-width: 600px;
    margin: 0 auto;
    background: white;
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(139, 111, 71, 0.1);
  }

  .form-header {
    text-align: center;
    margin-bottom: var(--space-6);
  }

  .form-icon {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--space-3);
  }

  .form-header h3 {
    font-family: var(--font-serif);
    color: var(--color-clay-brown);
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
  }

  .form-header p {
    color: var(--color-text-secondary);
  }

  .form-group {
    margin-bottom: var(--space-4);
  }

  .form-group label {
    display: block;
    margin-bottom: var(--space-2);
    font-weight: var(--font-weight-medium);
    color: var(--color-clay-brown);
  }

  .form-group input[type="text"],
  .form-group textarea {
    width: 100%;
    padding: var(--space-3);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-family: var(--font-sans);
    background: white;
    transition: border-color var(--duration-normal) var(--easing);
  }

  .form-group input[type="text"]:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-terracotta);
  }

  .star-rating {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-end;
    gap: var(--space-1);
  }

  .star-rating input {
    display: none;
  }

  .star-rating label {
    font-size: 2rem;
    color: var(--color-warm-beige);
    cursor: pointer;
    transition: color var(--duration-normal) var(--easing);
  }

  .star-rating input:checked ~ label,
  .star-rating label:hover,
  .star-rating label:hover ~ label {
    color: var(--color-terracotta);
  }

  .form-note {
    margin-top: var(--space-2);
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
    font-style: italic;
  }

  .success-message {
    background: var(--color-success-light);
    color: var(--color-success);
    padding: var(--space-3);
    border-radius: var(--radius-sm);
    margin-top: var(--space-4);
    text-align: center;
    border: 1px solid var(--color-success);
  }

  .error-message {
    background: var(--color-error-light);
    color: var(--color-error);
    padding: var(--space-3);
    border-radius: var(--radius-sm);
    margin-top: var(--space-4);
    text-align: center;
    border: 1px solid var(--color-error);
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    font-weight: 600;
    border-radius: var(--radius);
    border: 2px solid transparent;
    transition: all var(--duration-normal) var(--easing);
    text-decoration: none;
    white-space: nowrap;
    min-height: 44px;
    padding: 0 var(--space-4);
    position: relative;
    overflow: hidden;
    cursor: pointer;
    font-family: var(--font-sans);
  }

  .btn::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn--large {
    font-size: 1.125rem;
    padding: 0 var(--space-5);
    min-height: 52px;
  }

  .btn--primary {
    background-color: var(--color-terracotta);
    color: var(--color-off-white);
  }

  .btn--primary:hover {
    background-color: var(--color-clay-brown);
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg);
  }

  .btn--primary:active {
    transform: translateY(0);
  }

  /* Tablet */
  @media (max-width: 900px) {
    .reviews__header {
      flex-direction: column;
      text-align: center;
    }

    .reviews__header-content {
      text-align: center;
    }

    .reviews-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  /* Mobile Optimierungen */
  @media (max-width: 639px) {
    .reviews {
      padding: var(--space-10) var(--gutter);
    }

    .reviews__header {
      margin-bottom: var(--space-8);
    }

    .reviews__rating-big {
      padding: var(--space-4) var(--space-5);
    }

    .rating-number {
      font-size: 2rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .review-card {
      padding: var(--space-5);
    }

    .review-card::before {
      font-size: 3rem;
      top: var(--space-3);
      right: var(--space-4);
    }

    .review-avatar {
      width: 42px;
      height: 42px;
      font-size: 1rem;
    }

    .review-form-container {
      padding: var(--space-5);
    }

    .form-header h3 {
      font-size: 1.25rem;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .btn--large {
      min-height: 48px;
    }
  }

  @media (max-width: 374px) {
    .reviews {
      padding: var(--space-8) var(--gutter);
    }

    .review-card {
      padding: var(--space-4);
    }

    .review-form-container {
      padding: var(--space-4);
    }
  }
</style>

<script>
  // Initialen aus Namen extrahieren
  function getInitials(name: string): string {
    const parts = name.trim().split(' ');
    if (parts.length >= 2) {
      return (parts[0][0] + parts[parts.length - 1][0]).toUpperCase();
    }
    return name.substring(0, 2).toUpperCase();
  }

  // Datum formatieren
  function formatDate(dateString: string): string {
    const date = new Date(dateString);
    const options: Intl.DateTimeFormatOptions = {
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    };
    return date.toLocaleDateString('de-DE', options);
  }

  // Bewertungen laden und anzeigen
  async function loadReviews() {
    try {
      const response = await fetch('/api/reviews');
      const reviews = await response.json();

      const container = document.getElementById('reviews-container');
      const countEl = document.getElementById('review-count');
      if (!container) return;

      if (reviews.length === 0) {
        container.innerHTML = '<div class="loading-container"><p class="loading">Noch keine Bewertungen vorhanden. Seien Sie der Erste!</p></div>';
        return;
      }

      // Update review count
      if (countEl) {
        countEl.textContent = `${reviews.length} Bewertung${reviews.length !== 1 ? 'en' : ''}`;
      }

      // Sortiere nach Datum (neueste zuerst)
      reviews.sort((a: any, b: any) => new Date(b.date).getTime() - new Date(a.date).getTime());

      container.innerHTML = reviews.map((review: any) => `
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">${getInitials(review.name)}</div>
            <div class="review-meta">
              <span class="review-name">${escapeHtml(review.name)}</span>
              <span class="review-date">${formatDate(review.date)}</span>
            </div>
          </div>
          <div class="review-stars">${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}</div>
          <div class="review-comment">${escapeHtml(review.comment)}</div>
        </div>
      `).join('');
    } catch (error) {
      console.error('Fehler beim Laden der Bewertungen:', error);
      const container = document.getElementById('reviews-container');
      if (container) {
        container.innerHTML = '<div class="loading-container"><p class="loading">Fehler beim Laden der Bewertungen.</p></div>';
      }
    }
  }

  function escapeHtml(text: string) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // Formular absenden
  const form = document.getElementById('review-form') as HTMLFormElement;
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        rating: formData.get('rating'),
        comment: formData.get('comment')
      };
      
      try {
        const response = await fetch('/api/reviews', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          const successMsg = document.getElementById('review-success');
          const errorMsg = document.getElementById('review-error');
          if (successMsg) successMsg.style.display = 'block';
          if (errorMsg) errorMsg.style.display = 'none';
          form.reset();
          
          setTimeout(() => {
            if (successMsg) successMsg.style.display = 'none';
          }, 5000);
        } else {
          throw new Error('Fehler beim Absenden');
        }
      } catch (error) {
        const errorMsg = document.getElementById('review-error');
        if (errorMsg) {
          errorMsg.textContent = '❌ Fehler beim Absenden. Bitte versuchen Sie es später erneut.';
          errorMsg.style.display = 'block';
        }
      }
    });
  }
  
  // Bewertungen beim Laden der Seite anzeigen
  loadReviews();
</script>

