---
import Badge from "./Badge.astro";
import type { Workshop } from "../lib/storage";

interface Props {
    workshop: Workshop;
}

const { workshop } = Astro.props;

const isFull = workshop.currentParticipants >= workshop.maxParticipants;
const availableSpots = workshop.maxParticipants - workshop.currentParticipants;

const formattedDate = new Date(workshop.date).toLocaleDateString("de-DE", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<article class="workshop-card">
    <a href={`/workshops/${workshop.id}`} class="card-link">
        <div class="card-image">
            <img src={workshop.image} alt={workshop.title} loading="lazy" />
            {
                isFull ? (
                    <Badge
                        variant="sold"
                        label="Ausgebucht"
                        className="workshop-badge"
                    />
                ) : (
                    <Badge
                        variant="available"
                        label={`${availableSpots} Plätze frei`}
                        className="workshop-badge"
                    />
                )
            }
            <div class="card-date">
                <span class="day">{new Date(workshop.date).getDate()}</span>
                <span class="month">
                    {
                        new Date(workshop.date).toLocaleDateString("de-DE", {
                            month: "short",
                        })
                    }
                </span>
            </div>
        </div>
        <div class="card-content">
            <h3>{workshop.title}</h3>
            <div class="card-meta">
                <span>{workshop.time}</span>
                <span>{workshop.location}</span>
            </div>
            <p class="description">{workshop.description}</p>
            <div class="card-footer">
                <span class="price">{workshop.price} €</span>
                <span class="btn-text">Details & Buchung →</span>
            </div>
        </div>
    </a>
</article>

<style>
    .workshop-card {
        background: white;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition:
            transform var(--transition-base),
            box-shadow var(--transition-base);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .workshop-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    .card-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-image {
        position: relative;
        aspect-ratio: 3/2;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--transition-slow);
    }

    .workshop-card:hover .card-image img {
        transform: scale(1.05);
    }

    .workshop-badge {
        position: absolute;
        top: var(--space-3);
        right: var(--space-3);
        z-index: 1;
    }

    .card-date {
        position: absolute;
        bottom: var(--space-3);
        left: var(--space-3);
        background: rgba(255, 255, 255, 0.95);
        padding: 0.5rem 0.75rem;
        border-radius: var(--radius-sm);
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: var(--shadow-sm);
        min-width: 3.5rem;
    }

    .card-date .day {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-bold);
        line-height: 1;
        color: var(--color-text-primary);
    }

    .card-date .month {
        font-size: var(--font-size-xs);
        text-transform: uppercase;
        color: var(--color-text-secondary);
        margin-top: 0.125rem;
    }

    .card-content {
        padding: var(--space-5);
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .card-content h3 {
        margin: 0 0 var(--space-3);
        font-size: var(--font-size-lg);
        line-height: var(--line-height-snug);
        color: var(--color-text-primary);
    }

    .card-meta {
        display: flex;
        gap: var(--space-4);
        margin-bottom: var(--space-4);
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
    }

    .description {
        color: var(--color-text-secondary);
        font-size: var(--font-size-sm);
        line-height: var(--line-height-relaxed);
        margin-bottom: var(--space-5);
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex: 1;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
        padding-top: var(--space-4);
        border-top: 1px solid var(--color-border-light);
    }

    .price {
        font-weight: var(--font-weight-bold);
        color: var(--color-text-primary);
        font-size: var(--font-size-lg);
    }

    .btn-text {
        color: var(--color-accent);
        font-weight: var(--font-weight-medium);
        font-size: var(--font-size-sm);
        transition: transform var(--transition-fast);
    }

    .workshop-card:hover .btn-text {
        transform: translateX(4px);
    }
</style>
